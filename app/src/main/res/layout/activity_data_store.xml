<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firebasecloud.DataStoreActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="normal"
        android:textSize="20sp"
        android:text="Selecciona una opción"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/fireSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar nuevo"
        android:layout_margin="14dp"/>

    <Button
        android:id="@+id/fireQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulta única"
        android:layout_margin="14dp"/>

    <Button
        android:id="@+id/session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sesiones"
        android:layout_margin="14dp"/>
    <Button
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mapas"
        android:layout_margin="14dp"/>
    <Button
        android:id="@+id/authPractice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="autenticación"
        android:layout_margin="14dp"/>
</LinearLayout>